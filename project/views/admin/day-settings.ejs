<%- include("partials/header") %>

<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Day Settings</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Day Settings</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <!-- right column -->
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-dark">
          <div class="card-header">
            <h3 class="card-title">Day Settings</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form role="form">
              <!-- day settings -->
              <div class="row">

                <!-- day settings -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Day Count Value</label>
                    <input type="number" class="form-control" required min="1" placeholder="Enter days..." name="daysetting">
                    </input>
                  </div>
                </div>

              </div>

              <!-- button submit -->
              <button class="btn btn-dark" type="submit">Submit</button>
            </form>

            <!-- Small boxes -->
            <div class="row" style="margin-top: 30px;">
              <div class="col-md-12">
                <div class="card card-dark">
                  <div class="card-header">
                    <h3 class="card-title">Historial</h3>
                  </div>

                  <!-- /.card-header -->

                  <div class="card-body">
                    <table id="tbl-day-settings" class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>#ID</th>
                          <th>Total Days</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                      <tfoot>
                        <tr>
                          <th>#ID</th>
                          <th>Total Days</th>
                          <th>Action</th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
              </div>
              <!-- /.col -->
            </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!--/.col (right) -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("partials/footer")%>