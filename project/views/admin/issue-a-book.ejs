<%- include("partials/header") %>

<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Issue a Book</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Issue a Book</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <!-- right column -->
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-dark">
          <div class="card-header">
            <h3 class="card-title">Issue a Book</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form>
              <!-- Input name and status -->
              <div class="row">

                <!-- select category -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select Category</label>
                    <select class="form-control" required name="dd_category">
                      <option value="">Choose Category</option>
                    </select>
                  </div>
                </div>

                <!-- select Book -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select Book</label>
                    <select class="form-control" required name="dd_book">
                      <option value="">Choose Book</option>
                    </select>
                  </div>
                </div>


              </div>

              <!-- user and issue day -->
              <div class="row">

                <!-- select user -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select User</label>
                    <select class="form-control" required name="dd_user">
                      <option value="">Choose User</option>
                    </select>
                  </div>
                </div>

                <!-- days issue -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>How many days we want issue?</label>
                    <select class="form-control" required name="dd_days">
                      <option value="">Choose Days</option>
                    </select>
                  </div>
                </div>


              </div>

              <!-- select status -->
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Select Status</label>
                  <select class="form-control" name="status">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                  </select>
                </div>
              </div>

              <!-- button submit -->
              <button class="btn btn-dark" type="submit">Submit</button>
            </form>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!--/.col (right) -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("partials/footer")%>